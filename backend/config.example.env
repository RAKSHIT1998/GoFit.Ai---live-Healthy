# Server Configuration
PORT=3000
NODE_ENV=development

# Database - MongoDB Atlas Connection String
# Replace with your actual MongoDB connection string
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/gofitai?retryWrites=true&w=majority

# JWT Secret - Use a strong random string in production
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=7d

# OpenAI API Key
# Get your key from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# AWS S3 (or DigitalOcean Spaces) - For image storage
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=gofit-ai-meals

# Redis (for BullMQ) - Optional for background jobs
# Set REDIS_ENABLED=false to disable Redis completely
# Leave REDIS_HOST unset to skip Redis connection
REDIS_ENABLED=true
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Apple In-App Purchase
# Get these from App Store Connect: https://appstoreconnect.apple.com
# 1. Shared Secret: App Store Connect → Users and Access → Keys → In-App Purchase → Shared Secret
APPLE_SHARED_SECRET=0c401df645b84cbd949f34a68d706ff9
# 2. App Store Connect API Key ID (for server-to-server notifications)
APPLE_APP_STORE_CONNECT_API_KEY_ID=AM9B5Z682V
# 3. In-App Purchase Key ID
APPLE_IN_APP_PURCHASE_KEY_ID=2WR55LJR4K
# 4. Bundle ID (must match your app's bundle identifier)
APPLE_BUNDLE_ID=com.rakshit.Gofit.ai.GoFit-Ai-live-Healthy

# CORS - Allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

