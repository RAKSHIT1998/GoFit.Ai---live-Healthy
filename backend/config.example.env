# Server Configuration
PORT=3000
NODE_ENV=development

# Database - MongoDB Atlas Connection String
# Replace with your actual MongoDB connection string
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/gofitai?retryWrites=true&w=majority

# JWT Secret - Use a strong random string in production
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=7d

# OpenAI API Key
# Get your key from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# AWS S3 (or DigitalOcean Spaces) - For image storage
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=gofit-ai-meals

# Redis (for BullMQ) - Optional for background jobs
# Set REDIS_ENABLED=false to disable Redis completely
# Leave REDIS_HOST unset to skip Redis connection
REDIS_ENABLED=true
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Apple In-App Purchase
APPLE_SHARED_SECRET=your-apple-shared-secret
APPLE_BUNDLE_ID=com.gofitai.app

# CORS - Allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

